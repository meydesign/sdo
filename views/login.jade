extends layout

block scripts
  
block content
  .row
    .col-sm-6.col-sm-offset-3
      h1 Login
      form#login_form(action='/api/security/login', method='post')
        .form-group
          label Email
          input.form-control(type='email', name='email')
        .form-group
          label Password
          input.form-control(type='password', name='password')
        .form-group
          button.btn.btn-primary(type='submit') Login

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title= title
    
    //- stylesheets
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body(style='padding-top: 50px;')

    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') SDO
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='#') Home
            li
              a(href='/about') About
            li
              a(href='#news') News
            li
              a(href='#search') Search
            li
              a(href='#dashboard') Dashboard
            li
              a(href='/contact') Contact
            li
              a(href='/help') Help
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/login') Login
            li
              a(href='/register') Register
    
    .clearfix
    
    .page-container
      .sidebar-wrapper.hidden-xs
        .sidebar
          ul.nav.nav-sidebar
            li.active
              a(href='#') Dashboard

      .content-wrapper
        .container-fluid.page-content
          block content
        
    footer.footer
      .container
        p.text-muted Place content here.  
        
    //- scripts
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/js/bootstrap.min.js')
